
<h3>Users</h3>
<div class="row-fluid">
  <div class="span6 offset1">

<table class="table">
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th><center>Scores</center></th>
    <th><center>Team</center></th>   
	<th>Admin</th>
	<th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= link_to user.name, user %> </td>
    <td><%= user.email %></td>
	<td><% user.matchpicks.each do |matchpick| %>
		<% if matchpick.reason == "Scores" %>
		<center><%= link_to matchpick.status, predict_path(matchpick.id) %>	</center>
			<% end %><% end %>
			</td>
		<td>	<% user.matchpicks.each do |matchpick| %>
				<% if matchpick.reason == "Team" %>
				<center><%= link_to matchpick.status, predict_path(matchpick.id) %></center>
					<% end %><% end %>
					</td>
				   <td><%= user.admin %></td>
	<td><%= link_to 'edit', edit_user_path(user) %> | <%= link_to 'destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Sign up', new_user_path, class: "btn btn-primary" %>
<%= link_to 'Sign in', signin_path, class: "btn btn-primary" %>
</div></div>