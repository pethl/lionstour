
<% require 'date' %>
<% date = DateTime.parse("2013-06-21 00:00:00") %>

<p id="notice"><%= notice %></p>
<h3>Match Details</h3>

<div class="row-fluid">
  <div class="span3">
		<div class="well well-small">

<table>
	<tr>
		<td><b>Location:</b></td>
		<td><%= @fixture.location %></td>
	</tr>
	<tr>
		<td><b>Home team:</b></td>
		<td><%= @fixture.hometeam %></td>
	</tr>

		<td><b>Match date:</b></td>
		<td><%= @fixture.match %></td>
	</tr>
	<tr>
		<td><b>Test ?</b></td>
		<td>	<% if @fixture.test == true %>
			<i class='icon-ok'></i>
			<% else %>
			No
		<% end %></td>
		</tr>
		<tr>
		<td><b>Result: </b></td>
		<td> <%= @fixture.score %></td>
	</tr>
</table>
</div>
</div>

<% if @fixture.id == 10 %>
  <div class="span3">
  <%= render '/fixtures/header' %>
  </div>
<% end %>

<div class="span6">
	<% if date < Date.today %>
		<% @predicts = get_predictions_for_fixture(@fixture.id) %>
		<% if @predicts.any? %>
		<% for predict in @predicts do %>

			<table>	
			<tr>
				<td> <%= get_user_name_for_prediction(predict.matchpick_id) %></td>
					<td><center><%= predict.homescore %> : 	<%= predict.awayscore %></center></td>
			</tr>
			</table>
			<% end %><% end %>	<% end %>
			<br>
      <strong><%= link_to 'Back to fixtures', fixtures_path %>
      </div>

</div>
