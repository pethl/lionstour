<%= simple_form_for(@squad) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :age %>
    <%= f.input :weight %>
    <%= f.input :height %>
    <%= f.input :country, as: :string   %>
    <%= f.input :position %>
    <%= f.input :position_strg %>
    <%= f.input :group %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
